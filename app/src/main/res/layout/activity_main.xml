<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/bigliner"
        app:constraint_referenced_ids="flight,d2,q"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/second_guideline"/>
    <TextView
        android:id="@+id/flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/second_guideline"
        android:layout_marginEnd="100dp"
        android:text="FLIGHT"/>
    <TextView
        android:id="@+id/d2"
        android:text="D2218"
        app:layout_constraintEnd_toEndOf="@id/second_guideline"
        android:layout_marginEnd="60dp"
        android:paddingBottom="40dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:alpha="0.7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/q"
        app:layout_constraintEnd_toStartOf="@id/second_guideline"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/qwe"/>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/first_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/firstguide"
        app:layout_constraintTop_toBottomOf="@id/bigliner"
        android:layout_marginTop="20dp"
        app:constraint_referenced_ids="boarding,time_7_30,gate,d4,seat,c3"
        />
    <TextView
        android:id="@+id/boarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/firstguide"
        android:alpha="0.5"
        android:text="BOARDING BEGINS"/>
    <TextView
        android:id="@+id/time_7_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:alpha="0.7"
        android:paddingBottom="30dp"
        app:layout_constraintStart_toStartOf="@id/firstguide"
        android:text="7:30"/>
    <TextView
        android:id="@+id/gate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GATE"
        app:layout_constraintStart_toStartOf="@id/firstguide"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/d4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D4"
        app:layout_constraintStart_toStartOf="@id/firstguide"
        android:textSize="30sp"
        android:paddingBottom="30dp"
        android:textColor="@color/black"
        android:alpha="0.7"
        />
    <TextView
        android:id="@+id/seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="@id/firstguide"
        android:text="SEAT"/>
    <TextView
        android:id="@+id/c3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3C"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="@id/firstguide"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/firstguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/second_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="30dp"/>

    <LinearLayout
        android:id="@+id/bigliner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="28dp"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp"
        android:paddingVertical="30dp"
        app:layout_constraintTop_toBottomOf="@id/huang"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/liner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jfk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="JFK"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="NEW YORK CITY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:alpha="0.8"
                android:text="DEPART"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="8:00AM"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"

            android:src="@drawable/airplane" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="SEA"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="seattle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:alpha="0.8"
                android:text="ARRIVE"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="11:17AM"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/delta"
        android:layout_width="217dp"
        android:layout_height="113dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/delta" />

    <TextView
        android:id="@+id/huang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alpha="0.5"
        android:text="Kathleen  Huang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/delta" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:text="Passanger"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delta" />
</androidx.constraintlayout.widget.ConstraintLayout>